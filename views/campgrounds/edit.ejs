<% layout('layouts/container') %>
    <div class="py-4 bg-light row">
        <h3 class="mt-4 text-center mb-4">Edit
            <h3 class="text-center mb-4">
                <%= campground.title %> - <%= campground.location %>
            </h3>
        </h3>
        <div class="col-6 offset-3">
            <form novalidate class="validated-form" enctype="multipart/form-data"
                action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" value='<%= campground.title %>' required name="campground[title]"
                        class="form-control" id="title" />
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" value='<%= campground.location %>' name="campground[location]"
                        class="form-control" id="location" required />
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Default file input example</label>
                    <input name="image" multiple class="form-control" type="file" id="formFile">
                </div>
                <div class="mb-3">
                    <label for="price">Price Per Night</label>
                    <div class="input-group py-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" value='<%= campground.price %>' required name="campground[price]"
                            id="price" aria-labelledby="price" aria-describedby="price-label" class="form-control"
                            placeholder="price">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="campground[description]" class="form-control" required id="description">
                    <%= campground.description %>
                    </textarea>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((img, i) => { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="<%=img.filename%> ">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%= img.filename %>" id="image-<%= i %> ">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                    <% }) %>
                </div>
                <button type="submit" class="btn btn-info p-2 mb-3">
                    <strong>
                        Update Campground
                    </strong>
                </button>
            </form>
            <a href="/campgrounds" class="btn btn-secondary">
                All Campgrounds
            </a>
        </div>
    </div>